<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.collections.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.*?>
<?import javafx.scene.layout.*?>
<?import org.openjfx.*?>

<AnchorPane onMouseClicked="#resetDescription" prefHeight="377.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.openjfx.RiskViewController">
   <children>
       <Label layoutX="252.0" layoutY="27.0" style="-fx-font: NORMAL 20 Tahoma;" text="Risks">
    </Label>
       <TableView fx:id="tableView" layoutX="252.0" layoutY="55.0" onMouseClicked="#loadDescription" prefHeight="270.0" prefWidth="338.0">
           <columns>
               <TableColumn prefWidth="100" text="Risk">
                   <cellValueFactory>
                  <PropertyValueFactory property="name" />
                   </cellValueFactory>
                   <cellFactory>
                       <FormattedTableCellFactory alignment="left">
                    </FormattedTableCellFactory>
                   </cellFactory>
               </TableColumn>
               <TableColumn prefWidth="100" text="Cost">
                   <cellValueFactory>
                  <PropertyValueFactory property="cost" />
                   </cellValueFactory>
                   <cellFactory>
                       <FormattedTableCellFactory alignment="left">
                    </FormattedTableCellFactory>
                   </cellFactory>
               </TableColumn>
               <TableColumn fx:id="riskPriorityColumn" prefWidth="100" text="Priority">
                   <cellValueFactory>
                  <PropertyValueFactory property="priority" />
                   </cellValueFactory>
                   <cellFactory>
                       <FormattedTableCellFactory alignment="right">
                    </FormattedTableCellFactory>
                   </cellFactory>
               </TableColumn>
           </columns>
           <items>
               <FXCollections fx:factory="observableArrayList">
            </FXCollections>
           </items>
           <sortOrder>
            <fx:reference source="riskPriorityColumn" />
           </sortOrder>
       </TableView>
       <HBox alignment="TOP_RIGHT" layoutX="252.0" layoutY="336.0" spacing="10">
           <TextField fx:id="riskNameField" prefHeight="26.0" prefWidth="81.0" promptText="Risk Name" />
           <TextField fx:id="riskCostField" prefHeight="26.0" prefWidth="64.0" promptText="cost" />
           <TextField fx:id="riskProbabilityField" prefHeight="26.0" prefWidth="40.0" promptText="probability" />
           <Button onAction="#addRisk" prefHeight="26.0" prefWidth="50.0" text="Add" />
           <Button onAction="#removeRisk" text="Remove" />
       </HBox>
      <TitledPane fx:id="riskPane" animated="false" layoutX="42.0" layoutY="55.0" prefHeight="270.0" prefWidth="202.0" text="Risk Summary">
        <content>
          <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
            <TextArea fx:id="summaryTextArea" />
        </content>
      </TitledPane>
   </children>
</AnchorPane>
